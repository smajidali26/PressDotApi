@model PressDot.Contracts.Model.AppointmentInfoToCustomer
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Appointment Status</title>
    <style>
        body {
            font-family: Calibri, sans-serif;
            font-size: 11pt;
            color: #555;
        }

        blockquote {
            border-left: 8px solid #cceeaa;
            font-size: 12pt;
            margin: 0;
            padding: 30px 60px;
        }
    </style>
</head>
<body>
    <h1>PressDots Appointment Information</h1>
    <p>Dear (@Model.Firstname @Model.Lastname)</p>

    @if(Model.State.Equals("Pending"))
    {
    <p>Your Appointment has been created and Waiting for approval.</p>
    }
    @if(Model.State.Equals("Approved"))
    {
    <p>Your Appointment has been approved.</p>
    }
    <h2>Your Appointment details are:</h2>
    <p>Appointment Id: @Model.AppointmentId</p>
    <p>Start Time: @Model.StartTimeString</p>
    <p>End Time: @Model.EndTimeString</p>
</body>
</html>
